rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // USERS: document id must equal auth.uid
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // USER PROGRESS AGGREGATE (for leaderboard): doc id = auth.uid
    match /user_progress/{userId} {
      allow read: if request.auth != null; // allow authenticated users to read leaderboard
      allow write: if request.auth != null && request.auth.uid == userId;
    }


    // USER SETTINGS: doc id = auth.uid
    match /user_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // USER HISTORY subcollection: users/{userId}/history/{historyId}
    match /users/{userId}/history/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // PRACTICE SESSIONS: granular analytics per user
    match /practice_sessions/{docId} {
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
    }

    // NOTIFICATIONS: user-specific stored FCM messages
    match /notifications/{docId} {
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
    }

    // SUTRA PROGRESS: doc id pattern userId_sutraId and userId field
    match /sutra_progress/{docId} {
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
    }

    // Fallback deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
